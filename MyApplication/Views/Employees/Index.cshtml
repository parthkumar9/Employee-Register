@model IEnumerable<MyApplication.Models.Employees>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>Welcome to your Employee Register.</p>
<p>This application records your company employees and allows you to perform CRUD(Create, Update & Delete) operations on their information.</p>
<p>You can Edit, Update and Delete your employee information and save it all here.</p>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptId)
            </td>


            @if (User.Identity.IsAuthenticated)
            {
            <td>

                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a>
            </td>
                    }
                    
               
            </tr>
        }
    </tbody>
</table>
